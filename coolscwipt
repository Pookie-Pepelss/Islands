local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local Remote = ReplicatedStorage:WaitForChild("rbxts_include"):WaitForChild("node_modules"):WaitForChild("@rbxts"):WaitForChild("net"):WaitForChild("out"):WaitForChild("_NetManaged"):WaitForChild("CLIENT_BLOCK_PLACE_REQUEST")

local placingEnabled = false
local placeRadius = 10
local placeDelay = 0.4
local showRadius = false
local validation = nil

task.spawn(function()
    pcall(function()
        local mt = getrawmetatable(game)
        local oldNamecall = mt.__namecall
        setreadonly(mt, false)

        mt.__namecall = newcclosure(function(self, ...)
            local args = {...}
            local method = getnamecallmethod()

            if method == "InvokeServer" and self.Name == "CLIENT_BLOCK_PLACE_REQUEST" and type(args[1]) == "table" then
                for k, v in pairs(args[1]) do
                    if k ~= "cframe" and k ~= "blockType" and k ~= "upperBlock" then
                        validation = {key = k, value = v}
                        break
                    end
                end
            end

            return oldNamecall(self, ...)
        end)

        setreadonly(mt, true)
    end)
end)

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local window = Rayfield:CreateWindow({
    Name = "Spammer",
    LoadingTitle = "Spammer"
})

local mainTab = window:CreateTab("Main", 42069)

mainTab:CreateToggle({
    Name = "Enable Spammer",
    CurrentValue = placingEnabled,
    Flag = "EnableSpammer",
    Callback = function(value)
        placingEnabled = value
        if placingEnabled and not validation then
            Rayfield:Notify({
                Title = "Validation Missing",
                Content = "Place a block manually once to capture validation data.",
                Duration = 5,
                Image = 4483362458
            })
        end
    end
})

mainTab:CreateSlider({
    Name = "Radius",
    Range = {1, 50},
    Increment = 1,
    Suffix = " studs",
    CurrentValue = placeRadius,
    Flag = "RadiusSlider",
    Callback = function(value)
        placeRadius = value
    end
})

mainTab:CreateSlider({
    Name = "Speed (Delay)",
    Range = {0.01, 2},
    Increment = 0.01,
    Suffix = "s",
    CurrentValue = placeDelay,
    Flag = "SpeedSlider",
    Callback = function(value)
        placeDelay = value
    end
})

mainTab:CreateToggle({
    Name = "Visualize Radius",
    CurrentValue = showRadius,
    Flag = "VisualizeToggle",
    Callback = function(value)
        showRadius = value
    end
})

local circleLines = {}
local segments = 40
for i = 1, segments do
    local line = Drawing.new("Line")
    line.Visible = false
    line.Color = Color3.fromRGB(0, 255, 100)
    line.Thickness = 2
    line.Transparency = 1
    table.insert(circleLines, line)
end

RunService.RenderStepped:Connect(function()
    if not showRadius then
        for _, line in ipairs(circleLines) do
            line.Visible = false
        end
        return
    end

    local char = player.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local center = hrp.Position
    local cam = workspace.CurrentCamera
   
